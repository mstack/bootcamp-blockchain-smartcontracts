{
  "extends": "solium:all",
  "plugins": [
    "security"
  ],
  "rules": {
    "operator-whitespace": 1,
    "mixedcase": [
      "warning",
      0
    ],
    "no-experimental": 0,
    "lbrace": 0,
    "max-len": [
      "warning",
      200
    ],
    "indentation": [
      "error",
      4
    ],
    "quotes": [
      "error",
      "double"
    ],
    "arg-overflow": [
      "warning",
      3
    ],
    "security/enforce-explicit-visibility": [
      "error"
    ],
    "security/no-block-members": 0,
    "security/no-named-returns": 0,
    "security/no-suicide-or-selfdestruct": [
      "error"
    ],
    "security/no-var": [
      "error"
    ],
    "security/no-inline-assembly": "off"
  }
}